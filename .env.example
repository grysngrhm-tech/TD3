# =============================================================================
# TD3 Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase (required)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# -----------------------------------------------------------------------------
# n8n Integration
# -----------------------------------------------------------------------------
# Base webhook URL for n8n instance
NEXT_PUBLIC_N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook

# Budget import webhook (defaults to {N8N_WEBHOOK_URL}/budget-import)
NEXT_PUBLIC_N8N_BUDGET_WEBHOOK=https://your-n8n-instance.com/webhook/budget-import

# Draw processing webhook (defaults to {N8N_WEBHOOK_URL}/td3-draw-process)
NEXT_PUBLIC_N8N_DRAW_WEBHOOK=https://your-n8n-instance.com/webhook/td3-draw-process

# Shared secret for n8n callback authentication (must match n8n's TD3_WEBHOOK_SECRET)
N8N_CALLBACK_SECRET=your-shared-callback-secret

# -----------------------------------------------------------------------------
# App URL
# -----------------------------------------------------------------------------
# Public app URL used for callback URLs and links in notifications
NEXT_PUBLIC_APP_URL=https://td3.tennantdevelopments.com

# -----------------------------------------------------------------------------
# AI / Optional
# -----------------------------------------------------------------------------
# OpenAI API key for invoice AI selection (optional)
OPENAI_API_KEY=sk-your-openai-api-key

# -----------------------------------------------------------------------------
# Auto-set by Vercel (do not configure manually)
# -----------------------------------------------------------------------------
# VERCEL_URL - Automatically set by Vercel deployment
# NEXT_PUBLIC_BASE_URL - Used internally for API calls
